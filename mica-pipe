# -----------------------------------------------------------------------------------------------#
#     Quantitative outputs for cortical morphology analyses: Thickness, curvature, mean qT1
#     REQUIRES -post-structural, -proc_freesurfer, and -postMPC
if [ "$ALL" = "TRUE" ] || [ "$postMorph" = "TRUE" ]; then
